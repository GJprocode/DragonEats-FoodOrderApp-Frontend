{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript version
    "module": "ESNext", // Modern module code generation
    "jsx": "react-jsx", // JSX code generation for React
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables `import` for CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in filenames
    "baseUrl": "./", // Base directory for non-relative module imports
    "paths": {
      "@components/*": ["src/components/*"], // Maps '@components/' to 'src/components/'
      "@/*": ["src/*"] // Maps '@/' to 'src/'
    },
    "moduleResolution": "bundler", // Module resolution strategy for modern bundlers
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with 'export ='
    "resolveJsonModule": true, // Allows importing JSON modules
    "isolatedModules": true, // Ensure each file can be safely transpiled
    "noEmit": true // Do not emit output
  },
  "include": ["src/**/*", "vite.config.ts"] // Specify which files to include in the compilation
}
